        </div>
          <div class="booking">
            <h3>Your Booking</h3>
            <p>Total: $<%= @flat.price %></p>
            <%= link_to "Reserve", new_flat_reservation_path(@flat), class: "btn btn-primary" %>
          </div>
         </div>
         <div class="container">
    <div class="form-wrapper" style="margin: 0 auto;">
      <h1 class="mt-4">How was your stay in <%= @flat.title %>? </h1>
      <p>Give us some details first.</p>
      <%= simple_form_for [@flat, @review] do |f| %>
        <%= f.input :description  %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.button :submit, "Add your review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  </div>
</div>
