<div class="container">
  <%  if params[:query].present? %>
     <h1 class="mt-4">Results for luxury homes near <%= params[:query] %></h1>
  <% else %>
     <h1 class="mt-4">All results</h1>
  <% end %>
  <div class="search-bar mt-4 form-inline">
      <%= form_tag flats_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a luxury home"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
  </div>


    <div class="row mt-4">
    <% @flats.each do |flat|  %>
      <div class="col-md-4">
        <div class="card mb-4">
          <img src="<%= cl_image_path flat.photo.key %>" class="card-img-top" alt="..." style="height: 220px;">
          <div class="card-body">
            <h5 class="card-title"><%=flat.title %></h5>
            <p class="card-text"> <%=flat.description %></p>
            <div class="button-price d-flex justify-content-between d-inline-block">
              <p class="card-text"> $<%=flat.price%></p>
              <%= link_to "Book", flat_path(flat), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
      <% end  %>
    </div>
</div>
