<div class="container">

  <h1 class="mt-4">Results for luxury homes near Barcelona</h1>
  <div class="search-bar mt-4">
    <form class="form-inline">
      <label class="sr-only" for="inlineFormInputName2">Name</label>
      <input type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="Search">

      <button type="submit" class="btn btn-primary mb-2">Click Me</button>
    </form>
  </div>
  
  
