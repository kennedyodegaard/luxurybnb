<div class="container">

  <h1 class="mt-4">Results for luxury homes near Barcelona</h1>
  <div class="search-bar mt-4">
    <form class="form-inline">
      <label class="sr-only" for="inlineFormInputName2">Name</label>
      <input type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="Search">

      <button type="submit" class="btn btn-primary mb-2">Click Me</button>
    </form>
  </div>


    <div class="row mt-4">
    <% @flats.each do |flat|  %>
      <div class="col-md-4">
        <div class="card mb-4">
          <img src="<%= cl_image_path flat.photo.key %>" class="card-img-top" alt="..." style="height: 220px;">
          <div class="card-body">
            <h5 class="card-title"><%=flat.title %></h5>
            <p class="card-text"> <%=flat.description %></p>
            <div class="button-price d-flex justify-content-between d-inline-block">
              <p class="card-text"> $<%=flat.price%></p>
              <%= link_to "Book", flat_path(flat), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
      <% end  %>
    </div>
</div>
